<!DOCTYPE html>
<html>
<head lang="en">
  <meta charset="UTF-8">
  <title>{{@root.title}}{{^title}}Dashboard{{/title}} - GameStack Admin</title>

  <!-- Styles -->
  <link rel="stylesheet" type="text/css" href="/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/styles.css">
  {{#each cssFiles}}
    <link rel="stylesheet" type="text/css" href="/{{this.filename}}">
  {{/each}}
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
              aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">GameStack Zeus</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">Settings</a></li>
        <li><a href="#">Help</a></li>
      </ul>
    </div>
  </div>
</nav>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li><a href="/">Overview</a></li>
        {{#each plugins}}
          <li><a href="/{{this.module}}">{{capitalize this.name}}</a></li>
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">{{{content}}}</div>
  </div>
</div>

<!-- Scripts -->
<script type="text/javascript" src="/jquery.js"></script>
<script type="text/javascript" src="/bootstrap.js"></script>
{{#each jsFiles}}
  <script type="text/javascript" src="/{{this.filename}}"></script>
{{/each}}
</body>
</html>
